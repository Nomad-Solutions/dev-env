{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNEXT",
    "moduleResolution": "bundler",
		"paths": {
			"@": ["."],
			"@/*": [
        "./*"
      ]
		},
    "types": [
      "bun-types"
    ],
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}